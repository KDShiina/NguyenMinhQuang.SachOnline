@using NguyenMinhQuang.SachOnline.Models @{
    KHACHHANG kh = (KHACHHANG)Session["TaiKhoan"];

}

<li class="dropdown">
    @if (Session["TaiKhoan"] == null) //Giao diện Login
    {
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">Người dùng<span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a href="~/User/DangKy"><span class="glyphicon glyphicon-user"></span> Đăng ký</a></li>
            <li><a href="~/User/DangNhap?id=1"><span class="glyphicon glyphicon-log- in"></span> Đăng nhập</a></li>
        </ul>

    }
    else
    //Giao diện Logout
    {
    <a href="#" id="userDropdown" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" aria-haspopup="true">Xin chào:@kh.HoTen <span class="caret"></span></a>
<ul class="dropdown-menu">
    <li><a href="~/User/chiTietKH"><span class="glyphicon glyphicon-user"></span> Thông tin cá nhân</a></li>
    <li role="separator" class="divider"></li>
    <li><a href="@Url.Action("DangXuat","User")"><span class="glyphicon glyphicon-log- out"></span> Đăng xuất</a></li>
</ul>

}


